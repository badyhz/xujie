    {id:"B201", name:"原创版画·海风", price:399, rating:4.9, cat:"艺术", icon:"🖼️", tags:["限量","原创"]},
    {id:"B202", name:"手作陶杯", price:159, rating:4.6, cat:"艺术", icon:"🏺", tags:["匠心"]},
    {id:"C301", name:"挂耳咖啡 12包", price:98, rating:4.4, cat:"咖啡", icon:"☕", tags:["拼配","清爽"]},
    {id:"C302", name:"冷萃瓶 600ml", price:69, rating:4.2, cat:"咖啡", icon:"🧊", tags:["夏日"]},
    {id:"D401", name:"蓝牙音箱 mini", price:299, rating:4.5, cat:"数码", icon:"📻", tags:["便携"]},
    {id:"D402", name:"阅读台灯", price:189, rating:4.3, cat:"数码", icon:"💡", tags:["护眼"]}
  ],
  cases:[
    {id:"S1", title:"一只托盘的旅行", cover:"🪵", brief:"从废木到餐桌的二次生命", link:"A101"},
    {id:"S2", title:"画里的风", cover:"🖼️", brief:"原创版画背后的创作手记", link:"B201"}
  ],
  orders:[],
  user:{name:"游客", points:0, address:"", level:"普通"},
  logs:[]
};
let state = loadState();

/* ------------------------- 工具函数 ------------------------- */
function $(sel,root=document){ return root.querySelector(sel); }
function $all(sel,root=document){ return Array.from(root.querySelectorAll(sel)); }
function saveState(){ localStorage.setItem(LS_KEY, JSON.stringify(state)); }
function loadState(){ try{ return JSON.parse(localStorage.getItem(LS_KEY)) || structuredClone(defaultData);}catch(e){return structuredClone(defaultData)}}
function money(n){ return "¥"+n.toFixed(2); }
function toast(msg){ const t=$("#toast"); t.textContent=msg; t.classList.add("show"); setTimeout(()=>t.classList.remove("show"),1600); }
function track(event, payload={}){ const row={t:new Date().toLocaleString(),event,payload}; state.logs.unshift(row); saveState(); console.log("[track]",row); renderCartCount(); }

/* ------------------------- 路由与页面 ------------------------- */
const PAGES = [
  {id:"home", label:"首页"},
  {id:"shop", label:"商城"},
  {id:"scan", label:"扫码直达"},
  {id:"cases", label:"案例/文化"},
  {id:"coupon", label:"优惠券"},
  {id:"me", label:"个人中心"}
];
let current="home";

function renderNav(){
  const nav=$("#tabs");
  nav.innerHTML = PAGES.map(p=>`<button data-id="${p.id}" class="${p.id===current?'active':''}">${p.label}</button>`).join("");
  $all("button", nav).forEach(b=>b.onclick=()=>{ current=b.dataset.id; render(); track("tab_switch",{to:current}); });
}
function render(){ renderNav(); const el=$("#app"); el.innerHTML="";
  if(current==="home") renderHome(el);
  if(current==="shop") renderShop(el);
  if(current==="scan") renderScan(el);
  if(current==="cases") renderCases(el);
  if(current==="coupon") renderCoupon(el);
  if(current==="me") renderMe(el);
  renderCartCount();
}

/* ------------------------- 首页 ------------------------- */
function renderHome(root){
  const wrap=document.createElement("div");
  // hero
  const hero=document.createElement("div"); hero.className="hero";
  hero.innerHTML=`
    <div class="card">
      <div class="carousel" id="carousel">
        <div>新品上架 · 夏日特辑</div>
        <div class="dotbox">
          <span class="dot on"></span><span class="dot"></span><span class="dot"></span>
        </div>
      </div>
      <div class="line"></div>
      <div class="toolbar">
        <b>快速入口</b>
        <button class="btn" onclick="goto('shop')">去逛商城</button>
        <button class="btn warn" onclick="goto('coupon')">领优惠券</button>
        <button class="btn ghost" onclick="goto('scan')">扫码直达</button>
      </div>
    </div>
    <div class="card">
      <div class="section-title">首页布局模式</div>
      <div class="chips">
        <span class="chip ${state.mode==='culture'?'on':''}" onclick="setMode('culture')">文化优先</span>
        <span class="chip ${state.mode==='direct'?'on':''}" onclick="setMode('direct')">导流优先</span>
      </div>
      <div class="line"></div>
      <div class="muted">说明：根据定位选择首页重点。文化优先 → 突出案例故事；导流优先 → 突出优惠券与扫码入口。</div>
    </div>`;
  wrap.appendChild(hero);

  // 两列区块：根据模式切换顺序
  const A = `
    <div class="card">
      <div class="section-title">精选寄售案例</div>
      <div class="grid">
        ${state.cases.map(s=>`
          <div class="prod">
            <div class="thumb">${s.cover}</div>
            <b>${s.title}</b>
            <div class="muted">${s.brief}</div>
            <div class="space"></div>
            <button class="btn ghost" onclick="openCase('${s.id}')">阅读故事</button>
          </div>`).join("")}
      </div>
    </div>`;
  const B = `
    <div class="card">
      <div class="section-title">热门商品</div>
      <div class="grid">
        ${state.products.slice(0,4).map(p=>prodCard(p)).join("")}
      </div>
    </div>`;
  const C = `
    <div class="card">
      <div class="section-title">优惠与导流</div>
      <div class="kpi">
        <div class="box"><b>优惠券</b><div class="muted">满减券/线下券</div><div class="line"></div><button class="btn" onclick="goto('coupon')">立即领取</button></div>
        <div class="box"><b>扫码购</b><div class="muted">线下商品二维码直达</div><div class="line"></div><button class="btn ghost" onclick="goto('scan')">去扫码</button></div>
        <div class="box"><b>直播</b><div class="muted">（占位，后期接入）</div><div class="line"></div><button class="btn" disabled>敬请期待</button></div>
        <div class="box"><b>预约</b><div class="muted">（占位，后期接入）</div><div class="line"></div><button class="btn" disabled>敬请期待</button></div>
      </div>
    </div>`;

  const row=document.createElement("div"); row.className="row";
  if(state.mode==="culture"){ row.innerHTML=A + B; wrap.appendChild(row); wrap.insertAdjacentHTML("beforeend", C); }
  else{ row.innerHTML=B + C; wrap.appendChild(row); wrap.insertAdjacentHTML("beforeend", A); }

  root.appendChild(wrap);
  // 简易轮播
  let idx=0; setInterval(()=>{ const dots=$all(".carousel .dot"); dots.forEach(d=>d.classList.remove("on")); idx=(idx+1)%dots.length; dots[idx].classList.add("on"); }, 2500);
}
function setMode(m){ state.mode=m; saveState(); toast(m==="culture"?"已切换为：文化优先":"已切换为：导流优先"); render(); track("mode_switch",{mode:m}); }
function goto(id){ current=id; render(); }

/* ------------------------- 商城 ------------------------- */
function renderShop(root){
  const cats=[...new Set(state.products.map(p=>p.cat))];
  let q=""; let cat="全部"; let sort="综合";
  const card=document.createElement("div"); card.className="card";
  card.innerHTML=`
    <div class="section-title">商城</div>
    <div class="toolbar">
      <input id="q" placeholder="搜索商品关键字…" />
      <select id="cat">${["全部",...cats].map(c=>`<option>${c}</option>`).join("")}</select>
      <select id="sort">
        <option>综合</option><option>价格⬆</option><option>价格⬇</option><option>评分⬆</option>
      </select>
      <div class="space"></div>
      <button class="btn" onclick="openCart()">查看购物车</button>
    </div>
    <div id="grid" class="grid" style="margin-top:12px"></div>`;
  root.appendChild(card);

  const grid=$("#grid",card);
  function apply(){
    let list=[...state.products];
    if(cat!=="全部") list=list.filter(p=>p.cat===cat);
    if(q.trim()) list=list.filter(p=>p.name.includes(q) || (p.tags||[]).some(t=>t.includes(q)));
    if(sort==="价格⬆") list.sort((a,b)=>a.price-b.price);
    if(sort==="价格⬇") list.sort((a,b)=>b.price-a.price);
    if(sort==="评分⬆") list.sort((a,b)=>b.rating-a.rating);
    grid.innerHTML=list.map(p=>prodCard(p)).join("");
  }
  $("#q",card).oninput=e=>{q=e.target.value;apply()};
  $("#cat",card).onchange=e=>{cat=e.target.value;apply()};
  $("#sort",card).onchange=e=>{sort=e.target.value;apply()};
  apply();
}
function prodCard(p){
  return `
  <div class="prod">
    <div class="thumb">${p.icon}</div>
    <b>${p.name}</b>
    <div class="muted">类别：${p.cat} · 评分 ${p.rating}</div>
    <div class="space"></div>
    <div class="flex">
      <div class="price">${money(p.price)}</div><div class="space"></div>
      <button class="btn ghost" onclick="openDetail('${p.id}')">详情</button>
      <button class="btn" onclick="addToCart('${p.id}')">加入</button>
    </div>
  </div>`;
}
function openDetail(id){
  const p=state.products.find(x=>x.id===id);
  const code="PROD-"+p.id;
  const html=`
    <div class="card">
      <div class="section-title">${p.name}</div>
      <div class="row">
        <div class="card"><div class="thumb" style="height:180px;font-size:60px">${p.icon}</div></div>
        <div class="card">
          <div><b>价格：</b>${money(p.price)}</div>
          <div><b>评分：</b>${p.rating}</div>
          <div><b>标签：</b>${(p.tags||[]).join(" / ")||"无"}</div>
          <div class="line"></div>
          <div class="muted">二维码字符串（用于扫码直达）：<br><b>${code}</b></div>
          <div class="line"></div>
          <div class="flex">
            <button class="btn" onclick="addToCart('${p.id}')">加入购物车</button>
            <button class="btn ghost" onclick="closeCart();">关闭</button>
          </div>
        </div>
      </div>
    </div>`;
  $("#drawerCart").innerHTML=html; $("#drawerCart").classList.add("show");
  track("view_detail",{id});
}

/* ------------------------- 扫码直达 ------------------------- */
function renderScan(root){
  const card=document.createElement("div"); card.className="card";
  card.innerHTML=`
    <div class="section-title">扫码直达</div>
    <div class="toolbar">
      <input id="scanInput" placeholder="请输入二维码字符串，如：PROD-A101" style="flex:1" />
      <button class="btn" id="btnScan">模拟扫码</button>
    </div>
    <div class="muted" style="margin-top:8px">提示：在商品详情页可查看各自的二维码字符串。</div>
    <div id="scanResult" style="margin-top:12px"></div>`;
  root.appendChild(card);

  $("#btnScan",card).onclick=()=>{
    const v=$("#scanInput",card).value.trim();
    const id=(v.split("PROD-")[1]||"").toUpperCase();
    const p=state.products.find(x=>x.id===id);
    const box=$("#scanResult",card);
    if(!p){ box.innerHTML=`<div class="card">未找到商品，检查二维码字符串是否正确。</div>`; track("scan_fail",{v}); return;}
    box.innerHTML = `<div class="card">${prodCard(p)}</div>`;
    track("scan_ok",{id});
  };
}

/* ------------------------- 案例/文化 ------------------------- */
function renderCases(root){
  const card=document.createElement("div"); card.className="card";
  card.innerHTML=`
    <div class="section-title">寄售案例/文化故事</div>
    <div class="grid">${state.cases.map(s=>`
      <div class="prod">
        <div class="thumb" style="height:120px;font-size:40px">${s.cover}</div>
        <b>${s.title}</b>
        <div class="muted">${s.brief}</div>
        <div class="space"></div>
        <button class="btn" onclick="openCase('${s.id}')">阅读</button>
      </div>`).join("")}</div>`;
  root.appendChild(card);
}
function openCase(id){
  const s=state.cases.find(x=>x.id===id);
  const p=state.products.find(x=>x.id===s.link);
  const html=`
    <div class="card">
      <div class="section-title">📝 ${s.title}</div>
      <p class="muted">（短文示例）${s.brief}。我们与作者沟通，将作品与生活空间结合……</p>
      <div class="line"></div>
      <div><b>文中提到的商品：</b></div>
      <div style="margin-top:8px">${prodCard(p)}</div>
    </div>`;
  $("#drawerCart").innerHTML=html; $("#drawerCart").classList.add("show");
  track("open_case",{id});
}

/* ------------------------- 优惠券 & 核销 ------------------------- */
function renderCoupon(root){
  const wrap=document.createElement("div"); wrap.className="row";
  const list=document.createElement("div"); list.className="card";
  list.innerHTML=`<div class="section-title">可领取的优惠券</div>
    <div class="grid">
      ${state.coupons.map(c=>`
        <div class="prod">
          <div class="thumb" style="font-size:34px;background:linear-gradient(135deg,#fff7ed,#fee2e2)">${c.type==='offline'?'🏷️':'💸'}</div>
          <b>${c.title}</b>
          <div class="muted">${c.type==='offline'?'线下门店扫码核销':'下单自动使用（满足门槛可选用）'}</div>
          ${c.type==='offline'?`<div class="muted">核销码：<b>${c.code}</b></div>`:""}
          <div class="space"></div>
          ${c.acquired?`<span class="badge">已领取</span>`:`<button class="btn" onclick="claimCoupon('${c.id}')">领取</button>`}
        </div>`).join("")}
    </div>`;
  wrap.appendChild(list);

  const verify=document.createElement("div"); verify.className="card";
  verify.innerHTML=`
    <div class="section-title">核销台（店员）</div>
    <div class="toolbar">
      <input id="verifyCode" placeholder="输入核销码（如：COFFEE-2025）" style="flex:1"/>
      <button class="btn ok" id="doVerify">核销</button>
    </div>
    <div id="verifyResult" style="margin-top:10px"></div>
    <div class="line"></div>
    <div class="muted">说明：仅 <b>线下券</b> 可在此核销；线上满减券在结算时使用。</div>`;
  verify.querySelector("#doVerify").onclick=()=>{
    const code=verify.querySelector("#verifyCode").value.trim();
    const c=state.coupons.find(x=>x.type==='offline' && x.code===code);
    const box=verify.querySelector("#verifyResult");
    if(!c){ box.innerHTML=`<div class="muted">未找到对应的线下券或券码错误。</div>`; track("verify_fail",{code}); return;}
    if(!c.acquired){ box.innerHTML=`<div class="muted">用户尚未领取此券，无法核销。</div>`; return;}
    if(c.used){ box.innerHTML=`<div class="muted">该券已使用。</div>`; return;}
    c.used=true; saveState(); box.innerHTML=`<div class="muted">✅ 已核销：${c.title}</div>`; track("verify_ok",{id:c.id}); toast("核销成功");
  };
  wrap.appendChild(verify);
  root.appendChild(wrap);
}
function claimCoupon(id){
  const c=state.coupons.find(x=>x.id===id); c.acquired=true; saveState(); render(); toast("已领取："+c.title); track("coupon_claim",{id});
}

/* ------------------------- 个人中心 ------------------------- */
function renderMe(root){
  const u=state.user;
  const card=document.createElement("div"); card.className="card";
  const percent = Math.min(100, (u.points%3000)/30); // 只是展示
  const orders = state.orders.slice(0,20);
  card.innerHTML=`
    <div class="section-title">个人中心</div>
    <div class="row">
      <div class="card">
        <b>会员等级：</b> ${getLevel().level}
        <div class="muted">积分：${u.points}（下单送积分，可解锁更高等级）</div>
        <div class="progress" style="margin:8px 0"><i style="width:${percent}%"></i></div>
        <div class="line"></div>
        <div><b>收货地址</b></div>
        <div class="flex" style="margin-top:6px">
          <input id="addr" value="${u.address||''}" placeholder="省市区 + 详细地址" style="flex:1"/>
          <button class="btn" onclick="saveAddr()">保存</button>
        </div>
      </div>
      <div class="card">
        <b>我的订单</b>
        ${orders.length? orders.map(o=>orderCard(o)).join("") : '<div class="muted" style="margin-top:6px">暂无订单</div>'}
      </div>
    </div>`;
  root.appendChild(card);
}
function orderCard(o){
  return `
  <div class="card" style="margin-top:8px">
    <div class="flex"><b>订单 ${o.id}</b><div class="space"></div><span class="badge">${o.status}</span></div>
    <div class="muted">金额：${money(o.pay)}，支付：${o.channel}</div>
    <div class="muted">商品：${o.items.map(i=>i.id+"×"+i.qty).join("，")}</div>
    <div class="line"></div>
    <button class="btn ghost" onclick="showLogistics('${o.id}')">查看物流</button>
  </div>`;
}
function showLogistics(oid){
  const o=state.orders.find(x=>x.id===oid);
  const html=`
    <div class="card">
      <div class="section-title">物流跟踪</div>
      <div class="timeline">${o.logistics.map(x=>`<div><b>${x.time}</b> - ${x.desc}</div>`).join("")}</div>
      <div class="line"></div>
      <button class="btn ghost" onclick="closeCart()">关闭</button>
    </div>`;
  $("#drawerCart").innerHTML=html; $("#drawerCart").classList.add("show");
}
function saveAddr(){ state.user.address=$("#addr").value.trim(); saveState(); toast("已保存地址"); track("addr_save"); }
function getLevel(){
  const pts=state.user.points;
  if(pts>=7000) return {level:"VIP", mult:1.2};
  if(pts>=3000) return {level:"金卡", mult:1.1};
  if(pts>=1000) return {level:"银卡", mult:1.05};
  return {level:"普通", mult:1};
}

/* ------------------------- 购物车 & 结算 ------------------------- */
function renderCartCount(){
  const count = state.cart.items.reduce((s,i)=>s+i.qty,0);
  $("#cartCount").textContent = count;
}
function openCart(){
  const box=$("#drawerCart"); box.classList.add("show");
  const items = state.cart.items.map(ci=>{
    const p=state.products.find(x=>x.id===ci.id);
    return `<div class="flex"><span>${p.name}</span><div class="space"></div>
      <button class="btn ghost" onclick="dec('${ci.id}')">－</button>
      <span>${ci.qty}</span>
      <button class="btn" onclick="inc('${ci.id}')">＋</button>
      <b>${money(p.price*ci.qty)}</b></div>`;
  }).join("") || '<div class="muted">购物车空空如也</div>';

  const coupons = state.coupons.filter(c=>c.acquired && !c.used && c.type!=='offline');
  const total = state.cart.items.reduce((s,ci)=> s + state.products.find(p=>p.id===ci.id).price*ci.qty, 0);
  const coupon = coupons.find(c=>c.id===state.cart.couponId);
  const discount = coupon && total>=coupon.threshold ? (coupon.type==='cash'?coupon.value:0) : 0;
  const pay = Math.max(0, total - discount);

  box.innerHTML = `
    <div class="section-title">购物车</div>
    ${items}
    <div class="line"></div>
    <div class="flex">
      <div>优惠券：</div>
      <select id="applyCoupon">
        <option value="">不使用</option>
        ${coupons.map(c=>`<option value="${c.id}" ${state.cart.couponId===c.id?'selected':''}>${c.title}（满${c.threshold}）</option>`).join("")}
      </select>
      <div class="space"></div>
      <div>小计：<b>${money(total)}</b>  &nbsp; 抵扣：<b>${money(discount)}</b>  &nbsp; 应付：<b>${money(pay)}</b></div>
    </div>
    <div class="line"></div>
    <div class="flex">
      <select id="channel"><option>微信支付</option><option>支付宝</option><option>银行卡</option></select>
      <div class="space"></div>
      <button class="btn ok" onclick="checkout()">下单支付</button>
      <button class="btn ghost" onclick="closeCart()">关闭</button>
    </div>`;
  $("#applyCoupon").onchange=e=>{ state.cart.couponId=e.target.value||null; saveState(); openCart(); };
}
function closeCart(){ $("#drawerCart").classList.remove("show"); }
function addToCart(id){
  const it = state.cart.items.find(x=>x.id===id);
  if(it) it.qty++; else state.cart.items.push({id,qty:1});
  saveState(); renderCartCount(); toast("已加入购物车"); track("add_cart",{id});
}
function inc(id){ const it=state.cart.items.find(x=>x.id===id); it.qty++; saveState(); openCart(); }
function dec(id){ const it=state.cart.items.find(x=>x.id===id); if(--it.qty<=0) state.cart.items=state.cart.items.filter(x=>x.id!==id); saveState(); openCart(); }
function checkout(){
  if(!state.cart.items.length){ toast("购物车为空"); return; }
  const channel=$("#channel").value;
  const coupons = state.coupons.filter(c=>c.acquired && !c.used && c.type!=='offline');
  const total = state.cart.items.reduce((s,ci)=> s + state.products.find(p=>p.id===ci.id).price*ci.qty, 0);
  const coupon = coupons.find(c=>c.id===state.cart.couponId);
  const discount = coupon && total>=coupon.threshold ? (coupon.type==='cash'?coupon.value:0) : 0;
  const pay = Math.max(0, total - discount);

  // 生成订单
  const oid = "OD"+Date.now().toString().slice(-6);
  const logistics=[
    {time:new Date().toLocaleString(), desc:"订单已创建"},
    {time:new Date(Date.now()+3600e3).toLocaleString(), desc:"仓库拣货中"},
    {time:new Date(Date.now()+7200e3).toLocaleString(), desc:"已发出，运输中"},
  ];
  state.orders.unshift({id:oid, items:structuredClone(state.cart.items), pay, status:"运输中", channel, logistics});
  // 积分成长
  const growth = Math.round(pay*10*getLevel().mult);
  state.user.points += growth;

  // 券置为已用
  if(coupon) coupon.used=true;
  // 清空购物车
  state.cart={items:[], couponId:null};
  saveState();

  toast("支付成功，订单已创建"); track("pay_ok",{oid,pay,channel});
  closeCart(); current="me"; render();
}

/* ------------------------- 埋点日志 ------------------------- */
function openLogs(){
  const box=$("#drawerLogs");
  box.classList.add("show");
  const logtxt = state.logs.slice(0,80).map(l=>`${l.t}  [${l.event}]  ${JSON.stringify(l.payload)}`).join("\n");
  box.innerHTML = `<div class="section-title">埋点日志</div><div class="log">${logtxt||"暂无日志"}</div>
  <div class="line"></div><button class="btn ghost" onclick="$('#drawerLogs').classList.remove('show')">关闭</button>`;
}

/* ------------------------- 顶部按钮绑定 ------------------------- */
$("#btnCart").onclick=openCart;
$("#btnLogs").onclick=openLogs;
$("#modeCulture").onclick=()=>setMode('culture');
$("#modeDirect").onclick=()=>setMode('direct');

